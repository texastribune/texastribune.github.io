permalink: /posts/
---

{% from "macros/post-feed-item.njk" import postFeedItem %} 

<main>
    <div class= "post-feed-container">
        <h1 class="has-xs-btm-marg"> All Posts </h1>
        <div class="has-notch has-bg-yellow has-xl-btm-marg "></div>
        {% set postlist = collections.posts %}
        <ul class="post-feed c-block-feed has-giant-btm-marg">
            {% for post in postlist | reverse %}
                {{ postFeedItem(post.data.title, post.data.author, post.data.image_url, post.data.image_alt, post.templateContent,  post.url, post.date) }}
            {% endfor %}
        </ul>
    </div>
</main>
