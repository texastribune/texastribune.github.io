{% 
  macro projectCard(
    title, 
    project_url, 
    description) 
%}

    <div class="card is-rounded-b has-bg-white-off has-text-black-off t-align-center">
        <article>
            <a href="{{ project_url }}"> <p class="t-size-m t-weight-bold has-s-padding">{{ title }}</p></a>
            <div class="card__description">
                <p class= "t-size-s"> 
                    {{ description }} 
                </p>
            </div>
        </article>
    </div>

{% endmacro %}
