---
layout: base.njk
---
<main>
  <article>
    <div class="post-title t-align-center t-serif">
        <h1>{{ title }}</h1>
    </div>
    <p class="post-author t-byline t-align-center has-text-gray-dark">
      <span class="t-byline__item l-display-ib">By {{ author }}</span>
      <time class="t-byline__item l-display-ib"> {{ date | readableDate }}</time>
    </p>
    <div class="post-content has-xl-padding t-serif">
        {{ content | safe }}
    </div>
  </article>
</main>
<nav aria-label="post" class="post-nav-container t-links t-uppercase t-lsp-b t-size-xs t-align-center t-weight-bold">
      <div class="post-nav">
        {%- set nextPost = collections.posts | getNextCollectionItem(page) %}
        {%- if nextPost %}
          <a href="{{ nextPost.url | url }}">
            <p class="has-text-teal">← Next Post</p>
          </a>
        {% endif %}
      </div>
      <div class="post-nav">
        {%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
        {%- if previousPost %}
          <a href="{{ previousPost.url | url }}">
            <p class="has-text-teal">Previous Post →</p>
          </a>
        {% endif %}
      </div>
  </nav>