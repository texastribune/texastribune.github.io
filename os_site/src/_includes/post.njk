---
layout: base.njk
---
<main>
    <nav class="post-navigation t-links-underlined">
      {%- set nextPost = collections.posts | getNextCollectionItem(page) %}
      {%- if nextPost %}

        <a class= "t-uppercase t-size-b" href="{{ nextPost.url | url }}">
          <span>←</span>
          <span>Next Post</span>
        </a>

      {% endif %}
    </nav>
    <div class="post-title">
        <h1>{{ title }}</h1>
    </div>
    <div class="post-content">
        <p> {{ content | safe }} </p>
    </div>
    <nav class="t-links-underlined post-navigation">
      {%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
      {%- if previousPost %}

        <a class= "t-uppercase t-size-b" href="{{ previousPost.url | url }}">
          <span>Previous Post</span>
          <span>→</span>
        </a>

      {% endif %}
    </nav>
</main>