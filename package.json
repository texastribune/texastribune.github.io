{
  "name": "texastribune-opensource",
  "version": "1.0.0",
  "description": "Open source at the Texas Tribune",
  "scripts": {
    "watch:sass": "sass --watch src/sass:_site/css --load-path=node_modules",
    "build:sass": "sass src/sass:_site/css --load-path=node_modules",
    "watch:eleventy": "eleventy --serve",
    "build:eleventy": "eleventy",
    "watch:webpack": "webpack --mode development --watch",
    "build:webpack": "webpack --mode production",
    "start": "npm-run-all build:sass --parallel watch:*",
    "build": "npm-run-all build:*",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@11ty/eleventy": "^0.12.1",
    "luxon": "^1.26.0",
    "react": "^17.0.1",
    "sass": "^1.32.5",
    "sass-mq": "^5.0.1"
  },
  "devDependencies": {
    "@11ty/eleventy-navigation": "^0.1.6",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.2",
    "@texastribune/queso-ui": "^10.3.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typewriter-effect": "^2.19.0",
    "webpack": "^5.26.0",
    "webpack-cli": "^4.5.0"
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  }
}
